{
	"name": "@harperdb/oauth",
	"version": "1.0.0",
	"description": "OAuth 2.0 authentication plugin for Harper",
	"license": "Apache-2.0",
	"author": {
		"name": "HarperDB, Inc.",
		"email": "opensource@harperdb.io",
		"url": "https://harper.fast/"
	},
	"contributors": [],
	"homepage": "https://harper.fast/",
	"repository": {
		"type": "git",
		"url": "https://github.com/HarperFast/oauth.git"
	},
	"bugs": {
		"url": "https://github.com/HarperFast/oauth/issues",
		"email": "opensource@harperdb.io"
	},
	"keywords": [
		"harperdb",
		"harper",
		"plugin",
		"oauth",
		"oauth2",
		"authentication",
		"oidc",
		"openid"
	],
	"type": "module",
	"main": "dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./config": "./config.yaml"
	},
	"files": [
		"dist/",
		"assets/",
		"schema/",
		"config.yaml",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "npm run build && node --test 'test/**/*.test.js' 'test/*.test.js'",
		"test:coverage": "npm run build && node --test --experimental-test-coverage 'test/**/*.test.js' 'test/*.test.js'",
		"lint": "eslint . --ignore-pattern 'dist/**'",
		"format": "prettier .",
		"format:check": "npm run format -- --check",
		"format:write": "npm run format -- --write",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"jsonwebtoken": "^9.0.2",
		"jwks-rsa": "^3.1.0"
	},
	"devDependencies": {
		"@harperdb/code-guidelines": "^0.0.5",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/node": "^20.11.0",
		"eslint": "^9.35.0",
		"prettier": "^3.6.2",
		"typescript": "^5.3.3"
	},
	"peerDependencies": {
		"harperdb": ">=4.6.0"
	},
	"engines": {
		"node": ">=20"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": ">=20",
			"onFail": "error"
		},
		"packageManager": {
			"name": "npm",
			"onFail": "error"
		}
	}
}
